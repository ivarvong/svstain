<style>
html, body {
	margin: 0;
	padding: 0;
}
.row {
	width: 100%;
	margin: 0;
	padding: 4px;
	font-family: Helvetica;
	border-bottom: 1px solid #CCC;
	vertical-align: center;
}
.views, .url {
	float: left;
}
.clear {
	clear: both;
}

.views {
	font-size: 34px;
	width: 200px;
	text-align: center;
}
.today {
	background: #55f188;
}
.url {
	line-height: 34px;
}
h3 {
	text-align: center;
	padding-top: 10px;
}
</style>
<h3>Top pages to <%= site %> in the last <%= (seconds/60.0).to_i %> minutes</h3>


<% data.each do |url, views| %>	
	<% classes = [] %>
	<% classes << 'today' if url.include?(Time.now.strftime("/%Y/%m/%d/")) %>
	<div class="row <%= classes.join(' ') %>">
		<div class="views">
			<%= views %>
		</div>
		<div class="url">
			<%= url %>
		</div>
		<div class="clear"></div>
	</div>
<% end %>